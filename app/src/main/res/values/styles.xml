<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <item name="android:textColorPrimary">@android:color/white</item>
        <item name="android:actionBarSize">@dimen/nav_bar_height</item>
    </style>

    <!-- Before -->
    <style name="Animation.Activity" parent="@android:style/Animation">
        <item name="android:activityOpenEnterAnimation">@anim/slide_right_in</item>
        <item name="android:activityOpenExitAnimation">@anim/slide_left_out</item>
        <item name="android:activityCloseEnterAnimation">@anim/slide_left_in</item>
        <item name="android:activityCloseExitAnimation">@anim/slide_right_out</item>
    </style>

    <style name="AppTheme.Welcome" parent="AppTheme">
        <!--<item name="android:windowBackground">@drawable/splash</item>-->
<!--        <item name="android:windowbackground">@mipmap/bg_welcome</item>-->
        <item name="android:windowFullscreen">true</item>
    </style>

    <style name="AppTheme.Main" parent="AppTheme">
        <item name="android:windowBackground">@color/color_transparent</item>
    </style>
    <style name="AppTheme.Login" parent="AppTheme">
        <item name="android:windowBackground">@color/color_white</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar"/>

    <!-- PopupMenu -->
    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light"/>

    <!-- toolbar菜单样式 -->
    <style name="ToolbarMenuTheme" parent="@style/ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="actionMenuTextColor">@android:color/black</item>
    </style>

    <!-- Toolbar parent="TextAppearance.Widget.AppCompat.Toolbar.Title" -->
    <style name="TextAppearance.Toolbar.Title" parent="TextAppearance.AppCompat.Menu">
        <item name="android:textSize">20sp</item>
        <item name="android:singleLine">true</item>
        <item name="android:textColor">@color/color_black</item>
        <item name="android:ellipsize">end</item>
    </style>
    <style name="ToolbarTitleTextAppearance" parent="TextAppearance.Toolbar.Title">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="TextAppearance.Album.Title" parent="@style/TextAppearance.AppCompat.Large">
        <item name="android:textSize">29sp</item>
    </style>

    <style name="TextAppearance.Artist.Title" parent="@style/TextAppearance.AppCompat.Large">
        <item name="android:textSize">29sp</item>
    </style>

    <!-- Menu -->
    <style name="SimpleMenuTextAppearance" parent="TextAppearance.AppCompat.Menu">
        <item name="android:textSize">14sp</item>
        <item name="textAllCaps">false</item>
    </style>

    <style name="BottomDialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowTitleStyle">@null</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:colorBackgroundCacheHint">@null</item>
        <item name="android:windowAnimationStyle">@style/BottomDialog.AnimationStyle</item>
        <item name="android:windowSoftInputMode">stateUnspecified|adjustPan</item>
    </style>
    <style name="BottomDialog.AnimationStyle" parent="android:Animation">
        <item name="android:windowEnterAnimation">@anim/slide_in_from_bottom</item>
        <item name="android:windowExitAnimation">@anim/slide_out_to_bottom</item>
    </style>

    <style name="main_tab">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@null</item>
        <item name="android:button">@null</item>
    </style>

    <style name="main_tab_style" parent="main_tab">
        <item name="android:drawablePadding">1.5dp</item>
        <item name="android:textColor">@drawable/footer_text_color</item>
        <item name="android:textSize">@dimen/text_size_11</item>
        <item name="android:clickable">true</item>
        <item name="android:scaleType">center</item>
    </style>

    <style name="main_head_title">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/text_size_19</item>
        <item name="android:textColor">@color/head_text</item>
        <item name="android:shadowColor">@color/main_head_title_shadow_color</item>
    </style>

    <style name="title_base_button">
        <item name="android:layout_width">48dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:textSize">@dimen/text_size_14</item>
        <item name="android:textColor">@color/title_base_button_text_color</item>
    </style>

    <!-- cell background style -->
    <style name="style_cell_background">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">46dp</item>
        <item name="android:background">@drawable/bg_cell_selector</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:clickable">true</item>
        <item name="android:paddingLeft">18dp</item>
        <item name="android:paddingRight">8dp</item>
    </style>

    <!-- Button style -->
    <style name="AddEventButtonStyle" parent="ThemeOverlay.AppCompat">
        <item name="colorButtonNormal">#FF0385E1</item>
    </style>


    <!-- 待删减调整 -->
    <style name="PreferenceButtonTextSummaryText">
        <item name="android:textSize">@dimen/font_subhead</item>
        <item name="android:textColor">@color/secondary_text</item>
        <item name="android:gravity">left|center_horizontal|clip_horizontal</item>
        <item name="android:layout_marginLeft">@dimen/list_text_margin</item>
        <item name="android:layout_marginTop">@dimen/text_margin</item>
        <item name="android:layout_marginRight">@dimen/list_text_margin</item>
        <item name="android:layout_marginBottom">@dimen/text_margin</item>
    </style>
    <style name="PreferenceClickableText">
        <item name="android:textColor">@color/primary_color</item>
    </style>
    <style name="PreferenceControl">
        <item name="android:background">@drawable/bg_preference_item</item>
    </style>
    <style name="PreferenceSummaryText">
        <item name="android:textSize">@dimen/font_subhead</item>
        <item name="android:textColor">@color/primary_color</item>
        <item name="android:gravity">clip_horizontal</item>
        <item name="android:layout_marginRight">@dimen/list_icon_margin</item>
        <item name="android:layout_centerVertical">true</item>
    </style>
    <style name="PreferenceSwitch">
        <item name="android:background">@null</item>
        <item name="android:focusable">true</item>
        <item name="android:clickable">true</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:layout_centerVertical">true</item>
    </style>
    <style name="PreferenceTitleText">
        <item name="android:textSize">@dimen/font_subhead</item>
        <item name="android:textColor">@color/secondary_text</item>
        <item name="android:gravity">clip_horizontal</item>
    </style>
    <style name="SwitchTextAppearance">
        <item name="android:textColor">@color/bg_switch_calendar_color</item>
        <item name="android:textSize">12sp</item>
    </style>
    <style name="NegativeButton">
<!--        <item name="android:background">@drawable/bg_negative_button</item>-->
        <item name="android:layout_margin">@dimen/view_margin</item>
    </style>

</resources>
